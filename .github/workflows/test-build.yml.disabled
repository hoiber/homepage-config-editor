name: Test Docker Builds

on:
  pull_request:
    branches: [ "main" ]
    paths:
      - 'homepage-config-gui/**'
      - '.github/workflows/**'

jobs:
  test-build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        include:
          - dockerfile: ./homepage-config-gui/Dockerfile
            name: "Full Server"
          - dockerfile: ./homepage-config-gui/Dockerfile.static
            name: "Static Build"

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Test build ${{ matrix.name }}
      uses: docker/build-push-action@v5
      with:
        context: ./homepage-config-gui
        file: ${{ matrix.dockerfile }}
        platforms: linux/amd64
        push: false
        cache-from: type=gha
        cache-to: type=gha,mode=max